<%= simple_form_for @resource do |f| %>
  <%= f.input :email, autofocus: true %>
  <%= f.input :name %>
  <%= f.input :password %>
  <% if @resource.avatar.attached? %>
    <%= image_tag @resource.avatar, size: '180x90' %>
  <% end %>
  <%= f.file_field :avatar %>

  <%= f.button :submit %>
<% end %>